# Development Environment Configuration
# For local development

# ================================
# APPLICATION
# ================================
NODE_ENV=development
PORT=5000
APP_NAME=DGA Oversight Platform (Dev)

# ================================
# DATABASE - Prisma Cloud PostgreSQL
# ================================
DB_HOST=db.prisma.io
DB_PORT=5432
DB_NAME=dga_oversight
DB_USER=dgaadmin
DB_PASSWORD=DGAOversight2025!
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

DATABASE_URL=postgresql://dgaadmin:DGAOversight2025!@db.prisma.io:5432/dga_oversight?sslmode=require

# ================================
# AUTHENTICATION & SECURITY
# ================================
JWT_SECRET=dga-dev-secret-key-not-for-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGINS=http://localhost:5173,http://localhost:5178,http://localhost:3000

# ================================
# RATE LIMITING (Relaxed for development)
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=100
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_MS=300000

# ================================
# LOGGING
# ================================
LOG_LEVEL=debug
LOG_FILE=logs/development.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# ================================
# EXTERNAL SERVICES (Disabled in dev)
# ================================
SENTRY_DSN=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=dev@dga.sa

# ================================
# FEATURE FLAGS
# ================================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_DEBUG_LOGS=true

# ================================
# CACHE CONFIGURATION
# ================================
CACHE_ENABLED=false
CACHE_TTL=60
REDIS_URL=

# ================================
# FILE STORAGE
# ================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# ================================
# ADVANCED FEATURES
# ================================
ANALYTICS_ENABLED=true
PREDICTION_CONFIDENCE_THRESHOLD=0.70
COMPLIANCE_CHECK_INTERVAL=86400000
AUDIT_RETENTION_DAYS=90
WORKFLOW_ENABLED=true
AUTO_APPROVAL_THRESHOLD=50000
NOTIFICATION_ENABLED=false

# ================================
# MONITORING
# ================================
HEALTH_CHECK_INTERVAL=30000
METRICS_PORT=9090

# ================================
# DEPLOYMENT
# ================================
DEPLOYMENT_ENV=development
INSTANCE_ID=dev-local
REGION=local
